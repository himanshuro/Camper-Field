<% layout('layouts/boilerplate') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1546811740-23e671faf31c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80"
                    alt="" class="cardd-img-top">
                    <div class="card-body">
                        <h5 class="card-title"> Login </h5>
                        <form action="/login" class="validated-form" novalidate method="POST">
                            <div class="mb-3">
                                <label class="form-label" for="username"> Username </label>
                                <input class="form-control" autofocus type="text" name="username" id="username" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password"> Password </label>
                                <input class="form-control" type="password" name="password" id="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success"> Login </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>